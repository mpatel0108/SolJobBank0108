@model IEnumerable<sol_Job_Bank.Models.PostingDocument>

@{
    ViewData["Title"] = "Index";
}

<h1>Job Posting Documents List</h1>

<form asp-action="Index" method="get">
    <div class="form-horizontal">
        <div class="row">
            <div class="form-group col-md-4">
                <label class="control-label">Select by Posting:</label>
                @Html.DropDownList("PostingID", null, "All Job Postings", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group col-md-4">
                <label class="control-label">Search File Name:</label>
                @Html.TextBox("Searchname", null, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-4 align-self-end">
                <input type="submit" name="actionButton" value="Filter" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
            </div>
        </div>
    </div>

    <table class="table">
        <colgroup>
            <col width="420" />
            <col width="400" />
            <col />
        </colgroup>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.FileName)</strong><br />
                    Posting: @Html.DisplayFor(modelItem => item.Posting.PostingSummary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Download" asp-route-id="@item.ID">Download</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</form>
