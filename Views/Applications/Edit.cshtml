@model sol_Job_Bank.Models.Application

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <textarea asp-for="Comments" class="form-control"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostingID" class="control-label"></label>
                <select asp-for="PostingID" class="form-control" asp-items="ViewBag.PostingID"></select>
                <span asp-validation-for="PostingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicantID" class="control-label"></label>
                <select asp-for="ApplicantID" class="form-control" asp-items="ViewBag.ApplicantID"></select>
                <span asp-validation-for="ApplicantID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List of Applications</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
